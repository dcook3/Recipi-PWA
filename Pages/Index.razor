@code{
    private async void TestUpdateRecipe()
    {
        RecipeInformation info = new RecipeInformation();
        HttpResponseMessage response = await recipeService.GetRecipeById(20);

        if (response.IsSuccessStatusCode)
        {
            info.recipe = await response.Content.ReadFromJsonAsync<Recipe>();
            if (info.recipe != null)
            {
                info.isNewRecipe = false;
                var parsedObject = JObject.Parse(await response.Content.ReadAsStringAsync());
                var json = parsedObject["RecipeId"].ToString();
                var id = JsonConvert.DeserializeObject<int>(json);
                info.recipeId = id;
                navi.NavigateTo($"/RecipeEditor/{id}/false/true");
            }
            else
            {
                Console.WriteLine("The recipe sucks.");
            }
        }
    }
}