@using Recipi_PWA.Models;

@if (self)
{
    <div class="d-flex flex-column align-items-center justify-content-center bg-secondary" style="width: 100%; height: 20%">

        <div class="d-flex flex-column align-items-center justify-content-center" style="width: 20%">
            <ProfilePicture profilePictureUrl="@user.ProfilePicture"></ProfilePicture>
            <span class="text-bg-secondary">@user.Username</span>
        </div>
        <Stats stats="@user.userStats" self></Stats>
    </div>
}
else
{
    
}

@code {
    [Parameter]
    public bool self { get; set; }
    [Parameter]
    public IUserProfile user { get; set; }

}
