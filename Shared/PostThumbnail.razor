@using Recipi_PWA.Models;
@inject NavigationManager NavigationManager;

<div @onclick="goToPost"><i class="fa-solid flex-shrink-1 image-icon" style="background-image: url(@url); width: @width; height: @height; background-size: cover;"></i></div>


@code {
    [Parameter]
    public PostPreview post { get; set; }
    [Parameter]
    public string width { get; set; } = "33vw";
    [Parameter]
    public string height { get; set; } = "33vw";
    [Parameter]
    public int backUserId { get; set; }
    private string url = "https://media.istockphoto.com/id/1311321054/photo/rosted-potato-side-dish.jpg?s=612x612&w=0&k=20&c=_eBrdR5gMq6rMLU6H6aK54I3b_G7s9JSiP4BldvlyJw=";

    protected override void OnParametersSet()
    {
        if(post.ThumbnailURL != null && !post.ThumbnailURL.Contains("https://example.com"))
        {
            url = post.ThumbnailURL;
        }
    }

    private void goToPost()
    {
        Console.WriteLine("click asdf");
        if (post != null)
        {
            NavigationManager.NavigateTo($"/Post/{post.PostId}/{backUserId}");
        }
    }
}
