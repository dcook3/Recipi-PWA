@using Recipi_PWA.Models;
@inject NavigationManager NavigationManager;

<i class="fa-solid flex-shrink-1 image-icon" style="background-image: url(https://media.istockphoto.com/id/1311321054/photo/rosted-potato-side-dish.jpg?s=612x612&w=0&k=20&c=_eBrdR5gMq6rMLU6H6aK54I3b_G7s9JSiP4BldvlyJw=); width: @width; height: @height; background-size: cover;"></i>


@code {
    [Parameter]
    public PostPreview post { get; set; }
    [Parameter]
    public string width { get; set; } = "33vw";
    [Parameter]
    public string height { get; set; } = "33vw";



    private void goToPost()
    {
        if (post != null)
        {
            NavigationManager.NavigateTo($"/Post/${post.PostId}", false);
        }
    }
}
